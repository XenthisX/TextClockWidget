<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.elijahbosley.textclockwidget.MainActivity">

    <Button
        android:id="@+id/button_background_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showColorSelector"
        android:text="@string/pref_title_background_color" />

    <Button
        android:id="@+id/button_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showColorSelector"
        android:text="@string/pref_title_text_color" />

    <Button
        android:id="@+id/button_launch_settings"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/pref_title_launch_more_prefs"
        android:onClick="launchPreferences"/>


</LinearLayout>
